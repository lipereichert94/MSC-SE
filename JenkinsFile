node {
    def WORKSPACE = "/var/jenkins_home/workspace/DevOps"
    def dockerImageTag = "devops${env.BUILD_NUMBER}"

    try{
//          notifyBuild('STARTED')
stage('Clone Repo') {
        // for display purposes
        // Get some code from a GitHub repository
        git url: 'https://gitlab.com/gpranataAsyst/springboot-demodeploy.git',
            credentialsId: 'springdeploy-user',
            branch: 'main'
     }
          stage('Build docker') {
                 dockerImage = docker.build("devops:${env.BUILD_NUMBER}")
          }

          stage('Deploy docker'){
                  echo "Docker Image Tag Name: ${dockerImageTag}"
                  sh "docker stop devops || true && docker rm devops|| true"
                  sh "docker run --name devops -d -p 8081:8081 devops:${env.BUILD_NUMBER}"
          }
    }catch(e){
//         currentBuild.result = "FAILED"
        throw e
    }finally{
//         notifyBuild(currentBuild.result)
    }
}

